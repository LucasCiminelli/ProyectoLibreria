@model AppStore.Models.Domain.Categoria;
@{
    Layout = "_Layout";
}

<form class="w-40" asp-action="Add" method="post">

    <h2>Agregar Categoria</h2>

    <div class="input-container">
        <label asp-for="Nombre" class="w-40">Nombre</label>
        <input type="text" class="input" asp-for="Nombre" />
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Nombre"></span>
    </div>
    
    @if(TempData["msg"]!=null)
    {
        <div class="alert-mb1">@TempData["msg"]</div>
    }

    <div class="input-container">
        <button class="btn btn-default">Agregar</button>
        <a class="btn btn-sec" href="/Categoria/CategoriasList">Ver Todo</a>
    </div>




</form>