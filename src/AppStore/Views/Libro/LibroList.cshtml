@model AppStore.Models.DTO.LibroListVm;
@{
    Layout = "_Layout";
}

<div class="tbl-container">
    <h2>Administración de Libros</h2>

    <table>
        <tr>
            <th>Título</th>
            <th>Categoría</th>
            <th>Fecha Publicación</th>
            <th>Imágen</th>
            <th>Autor</th>
            <th>Acción</th>
        </tr>

        @foreach(var item in Model.LibroList!){
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.CategoriasNames</td>
                    <td>@item.CreateDate</td>
                    <td><img style="height:60px; width:80px" src="/Uploads/@item.Imagen"/></td>
                    <td>@item.Autor</td>
                    <td>
                       <a href="/Libro/Edit?id=@item.Id" class="btn btn-default">
                         <i class="fa fa-edit"></i>
                       </a>
                       <a href="/Libro/Delete?id=@item.Id" onclick="return window.confirm('estás seguro?')" class="btn btn-danger">
                         <i class="fa fa-trash"></i>
                       </a>
                    </td>
                </tr>
        }


    </table>
    <div class="input-container">
        <a href="/Libro/Add" class="btn btn-sec">Atrás</a>
    </div>

</div>